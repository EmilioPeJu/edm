TOP = ../../../..
include $(TOP)/config/CONFIG_EXTENSIONS
STATIC_BUILD=NO
SHARED_LIBRARIES=YES


# Add Debugging
USR_CXXFLAGS_Linux += -g -O0

USR_CXXFLAGS_Linux += -D__linux__ -DSINGLE_THREADED=1 -D__epics__=1
USR_LIBS_Linux = EdmLib pthread dl

USR_CXXFLAGS_solaris += -D__solaris__ -DSINGLE_THREADED=1 -D__epics__=1
USR_LIBS_solaris = EdmLib pthread dl

USR_CXXFLAGS_hpux11_11_mt += -DHP_UX=1111 -DSINGLE_THREADED=1 -D__epics__=1
USR_LIBS_hpux11_11_mt = EdmLib pthread 

# Add Debugging
#USR_LDFLAGS += -g

USR_LDFLAGS += -L$(INSTALL_LIB)

LIBRARY = Epics

PROD_LIBS += ca Com

USR_INCLUDES = -I../ -I../../lib

LIBSRCS += reg_pvs.cc
LIBSRCS += epicsPv.cc
LIBSRCS += pv.cc

include $(TOP)/config/RULES.Host

G++_NORMAL = $(G++)
G++_STRICT = $(G++)
